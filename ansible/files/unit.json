{
  "listeners": {
    "*:18880": {
      "pass": "routes/arksorg"
    }
  },
  "applications": {
    "rslv": {
      "type": "python 3.11",
      "working_directory": "/ezid/arksorg/resolver",
      "path": "/ezid/arksorg/resolver",
      "home": "/ezid/.pyenv/versions/3.11.6",
      "module": "rslv.app",
      "callable": "app"
    }
  },
  "routes": {
    "arksorg": [
      {
        "match": {
          "uri": [
            "~/\\.info.*",
            "~/api.*",
            "~/([A-Za-z0-9\\/;.\\-]+(:|%3A).*)"
          ]
        },
        "action": {
          "pass": "applications/rslv"
        }
      },
      {
        "match": {
          "uri": [
            "/*"
          ]
        },
        "action": {
          "share": "/ezid/arksorg/site/$uri"
        }
      }
    ]
  }
}
